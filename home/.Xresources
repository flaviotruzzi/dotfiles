Xcursor.size: 16W
URxvt.urgentOnBell: true
URxvt.scrollBar: false
URxvt.depth: 24
URxvt.url-launcher: /usr/bin/google-chrome
URxvt.matcher.button: 1
URxvt.perl-ext-common: default,matcher,vtwheel,keyboard-select
URxvt.saveLines: 2000

! Keybindings
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.C-Escape: perl:keyboard-select:activate
URxvt.keysym.M-u: perl:url-select:select_next

URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Control-Right:       \033[1;5C

URxvt.clipboard.copycmd:  xsel --input  --clipboard
URxvt.clipboard.pastecmd: xsel --output --clipboard

